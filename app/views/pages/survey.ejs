<section class='survey'>
  <section class='survey__introduction'>
    <h2 class='survey__introductionTitle'>Dites nous en un peu plus à votre sujet</h2>
    <hr class='survey__introductionSeparation'>
    <p class='survey__introductionDescription'>
      Préparez-vous à devenir meilleur
    </p>
    <button data-next='1' class='survey__introductionCTA'>
      C'est parti !
    </button>
  </section>

  <article data-question='1' class='survey__question survey__question--age'>
    <h2 class='survey__questionTitle'>Commençons par une question simple, quel est votre âge ?</h2>
    <section class='survey__questionAnswer'>
      <div class='survey__questionAnswerInputs'></div>
      <div class='survey__questionAnswerUnit'>ans</div>
    </section>
    <button data-next='2' class='survey__questionValidation'>
      <i class="material-icons survey__questionValidationIcon">done</i>
    </button>
  </article>

  <article  data-question='2' class='survey__question survey__question--height'>
    <h2 class='survey__questionTitle'>Quel est votre taille ?</h2>
    <section class='survey__questionAnswer'>
      <div class='survey__questionAnswerPointer'><hr></div>
      <div class='survey__questionAnswerInputs'></div>
      <div class='survey__questionAnswerUnit'>cm</div>
    </section>
    <button data-next='3' class='survey__questionValidation'>
      <i class="material-icons survey__questionValidationIcon">done</i>
    </button>
  </article>

  <article  data-question='3' class='survey__question survey__question--weight'>
    <h2 class='survey__questionTitle'>Quel est votre poids ?</h2>
    <section class='survey__questionAnswer'>
      <div class='survey__questionAnswerDisplay'>
        <span></span>
        <span class='survey__questionAnswerUnit'>kg</span>
      </div>
      <div class='survey__questionAnswerInputs'></div>
    </section>
    <button data-next='4' class='survey__questionValidation'>
      <i class="material-icons survey__questionValidationIcon">done</i>
    </button>
  </article>

  <article  data-question='4' class='survey__question survey__question--profile'>
    <h2 class='survey__questionTitle'>Quel type de sportif êtes-vous ?</h2>
    <section class='survey__questionAnswer'>
        <ul class='survey__questionAnswerInputs survey__questionAnswerInputs--sport'>
          <li class='survey__questionAnswerInput'>Athlète</li>
          <li class='survey__questionAnswerInput'>Avancée</li>
          <li class='survey__questionAnswerInput survey__questionAnswerInput--selected'>Régulier</li>
          <li class='survey__questionAnswerInput'>Débutant</li>
          <li class='survey__questionAnswerInput'>Pas sportif :(</li>
        </ul>
      </div>
    </section>
    <button data-next='5' class='survey__questionValidation'>
      <i class="material-icons survey__questionValidationIcon">done</i>
    </button>
  </article>

  <article data-question='5' class='survey__question survey__question--profile'>
    <h2 class='survey__questionTitle'>Encore un petit effort ; Dernière question : êtes vous fumeur ?</h2>
    <section class='survey__questionAnswer'>
        <ul class='survey__questionAnswerInputs survey__questionAnswerInputs--smoke'>
          <li class='survey__questionAnswerInput survey__questionAnswerInput--selected'>Non</li>
          <li class='survey__questionAnswerInput'>Oui</li>
        </ul>
      </div>
    </section>
    <button data-next='6' class='survey__questionValidation'>
      <i class="material-icons survey__questionValidationIcon">done</i>
    </button>
  </article>
</section>
